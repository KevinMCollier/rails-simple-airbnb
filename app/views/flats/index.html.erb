<div class="container">
  <h1 class="my-3">All our Flats </h1>
  <div class="row justify-content-center">
    <p>All <%= @flats.count %> flats.</p>
      <% @flats.each do |flat| %>
        <div class="col-md-4 col-12">
          <div class="card m-4">
            <div class="card-img">
              <img src="<%= flat.image_url %>" class="card-img-top" alt="flat">
            </div>
            <div class="card-body bg-light">
              <h4><%= flat.name.titleize %></h3>
              <p><%= flat.address %></p>
              <p>
                <%= flat.number_of_guests %><i class="fa-solid fa-user"></i>
                <%= flat.price_per_night %><i class="fa-solid fa-yen-sign"></i>
              </p>
            </div>
            <div class="card-bottom m-2">
              <%= link_to "More info", flat_path(flat) %>
              <%= link_to "Edit", edit_flat_path(flat) %>
              <%= link_to "Delete", flat_path(flat), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
            </div>
          </div>
        </div>
      <% end %>
  </div>
</div>
