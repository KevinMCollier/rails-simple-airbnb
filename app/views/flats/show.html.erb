<div class="map" style="background-image: url('<%= @flat.image_url %>');"></div>
<div class="container margin-top-negative">
  <div class="row">
    <div class="col-8">
      <div class="flat-show-card">
        <h1><%= @flat.name %></h1>
        <p><%= @flat.address %></p>
      </div>
      <div class="flat-show-card">
        <h3>More about this flat...</h3>
        <p><%= @flat.description %></p>
        <div class="map" style="background-image: url('<%= asset_path('map.png') %>') "></div>
      </div>
    </div>
    <div class="col-4">
      <div class="flat-show-card">
        <h5>Book this flat!</h5>
        <p>Form goes here</p>
      </div>
      <div class="flat-show-card">
        <h3>Details</h3>
        <div class="flex">
          <div class="flex"><%= @flat.number_of_guests %><i class="fa-solid fa-user" style="vertical-align: middle;"></i></div>
          <div class="flex ms-3"><%= @flat.price_per_night %><i class="fa-solid fa-yen-sign" style="vertical-align: middle;"></i></div>
        </div>
      </div>
      <div class="flat-show-card">
        <div class="flex">
          <h6 class="flex">Share</h6>
          <div class="flex" style="margin-left: auto;">
            <i class="fa-brands fa-facebook-square me-2"></i>
            <i class="fa-brands fa-twitter-square me-2"></i>
            <i class="fa-brands fa-pinterest-square me-2"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
